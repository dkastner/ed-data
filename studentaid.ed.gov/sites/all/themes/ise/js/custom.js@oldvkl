(function ($) {

  Drupal.behaviors.ise = {

    attach: function (context, settings) {


     // Kosi M. - Ticket 9718 > Remove empty glossary div with double line
	  function isEmpty( el ){
		  return !$.trim(el.html());
	  }
	  // If empty, add a class that will be used to set display: none via css
	  if (isEmpty($('#block-views-glossary-terms-block .view-glossary-terms .views-row'))) {

	  $('#block-views-glossary-terms-block').addClass('empty');

		// Add class to the first item in the sidebar to differentiate in case we need to style it
		$('.region-sidebar-second section').first().addClass('sidebar-first');
		$('.region-sidebar-second div').first().addClass('sidebar-first');
		$(".context-blog cite").attr('title','');

		}

		// Get PAS login cookie value
		function GetCookie(cname) {
			var name = cname + "=";
			var cookies= document.cookie.split(';');
		  //Cycle through each cookie to find a match.

			for(var i=0; i<cookies.length; i++) {
				var c = cookies[i];

				while (c.charAt(0)==' ')

		c = c.substring(1);

				//If there is a name hit, return the value
				if (c.indexOf(name) == 0) return c.substring(name.length,c.length);
			}//Cycle through each cookie
			return "";
		}//End function to return value of a cookie


        //Remove the LOGOUT button if not logged in.
        if (GetCookie('logged_in') !='true' || GetCookie('logged_in')=='false'){
            $("a#logout-link").replaceWith("<a hidden title='Log Out' id='logout-link' href='#'></a>");   
        }

		// Add on-click even to NSLDS login button so that first tab gets focus (508 compliance)
		$('#block-ise-nslds-nslds-login-block a#login-link').click(function() {
			 $("ul.tabbernav li.tabberactive a").attr("tabindex",0).focus();
		});

		// KM -> Adding custom Share button to Blog detail page and adding toggleClass
		//$('.sharelinks.internal:hidden').addClass('hiddenLinks');	

		$('.social-share-sticky .toggler').click(function() {
		  $('.social-share-sticky .toggler').toggleClass('close');
		  $('.floating-block-active .sharelinks.internal').toggleClass('expanded');
		});

		// KM -> Adding custom class to Mollom captcha_error message to hide the #messages error div for Mollom captcha errors
		//$('span.captcha_error').closest('#messages').addClass('captcha-hide');

		/* KM -> Removing added class (from function above) via toggleClass
			$('.social-share-sticky .toggler.close').click(function() {
			$('.social-share-sticky .toggler.close').toggleClass('close');
			$('.floating-block-active .sharelinks.internal').toggleClass('test');
			});
		*/

		/* KM -> Enable toggling on 'x' close button
			$('.closeshare.internal em').click(function() {
			$('.sharelinks.internal').slideToggle( "slow", function() {
			// Animation complete.
		  });
		});
		*/

			var isMob = false; //initiate as false
			// device detection
			if(/(android|bb\d+|meego).+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|ipad|iris|kindle|Android|Silk|lge |maemo|midp|mmp|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows (ce|phone)|xda|xiino/i.test(navigator.userAgent) || /1207|6310|6590|3gso|4thp|50[1-6]i|770s|802s|a wa|abac|ac(er|oo|s\-)|ai(ko|rn)|al(av|ca|co)|amoi|an(ex|ny|yw)|aptu|ar(ch|go)|as(te|us)|attw|au(di|\-m|r |s )|avan|be(ck|ll|nq)|bi(lb|rd)|bl(ac|az)|br(e|v)w|bumb|bw\-(n|u)|c55\/|capi|ccwa|cdm\-|cell|chtm|cldc|cmd\-|co(mp|nd)|craw|da(it|ll|ng)|dbte|dc\-s|devi|dica|dmob|do(c|p)o|ds(12|\-d)|el(49|ai)|em(l2|ul)|er(ic|k0)|esl8|ez([4-7]0|os|wa|ze)|fetc|fly(\-|_)|g1 u|g560|gene|gf\-5|g\-mo|go(\.w|od)|gr(ad|un)|haie|hcit|hd\-(m|p|t)|hei\-|hi(pt|ta)|hp( i|ip)|hs\-c|ht(c(\-| |_|a|g|p|s|t)|tp)|hu(aw|tc)|i\-(20|go|ma)|i230|iac( |\-|\/)|ibro|idea|ig01|ikom|im1k|inno|ipaq|iris|ja(t|v)a|jbro|jemu|jigs|kddi|keji|kgt( |\/)|klon|kpt |kwc\-|kyo(c|k)|le(no|xi)|lg( g|\/(k|l|u)|50|54|\-[a-w])|libw|lynx|m1\-w|m3ga|m50\/|ma(te|ui|xo)|mc(01|21|ca)|m\-cr|me(rc|ri)|mi(o8|oa|ts)|mmef|mo(01|02|bi|de|do|t(\-| |o|v)|zz)|mt(50|p1|v )|mwbp|mywa|n10[0-2]|n20[2-3]|n30(0|2)|n50(0|2|5)|n7(0(0|1)|10)|ne((c|m)\-|on|tf|wf|wg|wt)|nok(6|i)|nzph|o2im|op(ti|wv)|oran|owg1|p800|pan(a|d|t)|pdxg|pg(13|\-([1-8]|c))|phil|pire|pl(ay|uc)|pn\-2|po(ck|rt|se)|prox|psio|pt\-g|qa\-a|qc(07|12|21|32|60|\-[2-7]|i\-)|qtek|r380|r600|raks|rim9|ro(ve|zo)|s55\/|sa(ge|ma|mm|ms|ny|va)|sc(01|h\-|oo|p\-)|sdk\/|se(c(\-|0|1)|47|mc|nd|ri)|sgh\-|shar|sie(\-|m)|sk\-0|sl(45|id)|sm(al|ar|b3|it|t5)|so(ft|ny)|sp(01|h\-|v\-|v )|sy(01|mb)|t2(18|50)|t6(00|10|18)|ta(gt|lk)|tcl\-|tdg\-|tel(i|m)|tim\-|t\-mo|to(pl|sh)|ts(70|m\-|m3|m5)|tx\-9|up(\.b|g1|si)|utst|v400|v750|veri|vi(rg|te)|vk(40|5[0-3]|\-v)|vm40|voda|vulc|vx(52|53|60|61|70|80|81|83|85|98)|w3c(\-| )|webc|whit|wi(g |nc|nw)|wmlb|wonu|x700|yas\-|your|zeto|zte\-/i.test(navigator.userAgent.substr(0,4))) isMob = true;

			// Set the width of the modal window, based on current device orientation
			function setModalWidth(){
			    if(typeof window.matchMedia != "undefined" || typeof window.msMatchMedia != "undefined") {
					var likeIphoneSix = window.matchMedia( "(min-device-width : 375px) and (max-device-width : 667px)" ).matches;
					var likeIphoneSixPlus = window.matchMedia( "(min-device-width : 414px) and (max-device-width : 736px)" ).matches;
					var likeIphoneFive = window.matchMedia( "(min-device-width : 320px) and (max-device-width : 568px)" ).matches;
					var likeIphoneFour = window.matchMedia( "(min-device-width : 320px) and (max-device-width : 480px)" ).matches;
					var likeIpadPortrait = window.matchMedia( "(min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait)" ).matches;
			    } else {
			        var width = (window.innerWidth > 0) ? window.innerWidth : screen.width;
					var likeIphoneSix = (width > 374) && (width < 668);
					var likeIphoneSixPlus = (width > 413) && (width < 737);
					var likeIphoneFive = (width > 319) && (width < 569);
					var likeIphoneFour = (width > 319) && (width < 481);
					var likeIpadPortrait = (width > 767) && (width < 1025);
			    }
			    var likeIphone = (likeIphoneSix || likeIphoneSixPlus || likeIphoneFive || likeIphoneFour);

				$('#colorbox').css('left', '0');
				$('#colorbox').add('#cboxContent').add('#cboxLoadedContent').css('width', window.innerWidth - 30);
				$('#cboxWrapper','#colorbox').css('width', window.innerWidth);
				if (isMob && likeIphone) {
					$('#colorbox').add('#cboxContent').add('#cboxLoadedContent').css('height', window.innerHeight - 55);
					$('#cboxWrapper','#colorbox').css('height', window.innerHeight - 32);
				} else if (isMob && likeIpadPortrait) {
					$('#colorbox').css('padding-bottom', '55px');
					$('#cboxWrapper','#colorbox').css('padding-bottom', '30px');
				};
			};

			// Listen for orientation changes
			if (isMob) {
				window.addEventListener("orientationchange", function() {
					setModalWidth();
				}, false);
			};

		}

	}

 })(jQuery);